{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualNetworkName":{
      "type": "string",
      "metadata": {
        "description": "vnet name."
      },
      "defaultValue": "myvnet"
    },
    "subnetName":{
      "type": "string",
      "metadata": {
        "description": "subnet name."
      },
      "defaultValue": "Subnet"
    }
  },
  "variables": {},
  "resources": [
    {
     "apiVersion": "2015-01-01", 
     "name": "GetIpsForVnet", 
     "type": "Microsoft.Resources/deployments",
     "properties": { 
       "mode": "Incremental", 
       "templateLink": {
          "uri": "https://raw.githubusercontent.com/karataliu/kar-azure-template/master/vnet2ips.json",
          "contentVersion": "1.0.0.0"
       }, 
       "parameters": {
          "vnetName":{"value": "[parameters('virtualNetworkName')]"},
          "subnetName":{"value": "[parameters('subnetName')]"} 
       }
     }
    },
    {
     "apiVersion": "2015-01-01", 
     "name": "GetVmsForIps", 
     "type": "Microsoft.Resources/deployments",
     "properties": { 
       "mode": "Incremental", 
       "templateLink": {
          "uri": "https://raw.githubusercontent.com/karataliu/kar-azure-template/master/iterator.json",
          "contentVersion": "1.0.0.0"
       }, 
       "parameters": {
          "inputArray":{"value": "[reference('GetIpsForVnet').outputs.data.value]"},
          "functionalTemplateUri": {"value": "https://raw.githubusercontent.com/karataliu/kar-azure-template/master/ip2vm.json"}
       }
     }
    }
  ],
  "outputs": {
    "Ips":{
      "value": "[reference('GetIpsForVnet').outputs.data.value]",
      "type": "array"
    },
    "Vms":{
      "value": "[reference('GetVmsForIps').outputs.outputArray.value]",
      "type": "array"
    }
  }
}

