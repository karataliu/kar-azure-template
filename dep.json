{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
  },
  "variables": {
    "a1" : ["name1", "name2"],
    "res" : []
  },
  "resources": [
    {
      "name": "it-1",
      "apiVersion": "2015-01-01", 
      "type": "Microsoft.Resources/deployments",
      "properties": { 
        "mode": "Incremental", 
        "templateLink": {
            "uri": "https://raw.githubusercontent.com/karataliu/kar-azure-template/master/arrayMerge.json",
            "contentVersion": "1.0.0.0"
        }, 
        "parameters": { 
            "arrayIn1":{"value": []},
            "arrayIn2":{"value": []}
        }
     }
    },
    {
      "name": "[concat('it', copyIndex())]",
      "apiVersion": "2015-01-01", 
      "type": "Microsoft.Resources/deployments",
      "copy": {
          "name": "copy1",
          "count": "[length(variables('a1'))]"
        },
      "dependsOn": [],
      "properties": { 
        "mode": "Incremental", 
        "templateLink": {
            "uri": "https://raw.githubusercontent.com/karataliu/kar-azure-template/master/arrayMerge.json",
            "contentVersion": "1.0.0.0"
        }, 
        "parameters": { 
            "arrayIn1":{"value": "[reference(concat('it', sub(copyIndex(), 1))).outputs.arrayOut.value]"},
            "arrayIn2":{"value": ["[variables('a1')[copyIndex()]]"]}
        }
     }
    }
  ],
  "outputs": {
    "outArray":{
      "type": "array",
      "value": "[reference('it1').outputs.arrayOut.value]"
    }
  }
}

